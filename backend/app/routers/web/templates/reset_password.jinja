{% extends './base.jinja' %}

{% block content %}
	<section id="passwordResetPage" class="py-3 py-md-5 py-xl-8">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6">
					<div class="card border-0 rounded-4">
						<div class="card-body p-3 p-md-4 p-xl-5 text-center">
							<h3>Password Reset Requested</h3>
							<p class="mb-4">If an account exists with the entered email, you will receive a password reset link
								shortly.</p>
							<div class="d-grid">
								<a href="/login" class="btn btn-primary btn-lg">Return to Login</a>
							</div>
							<div class="mt-3">
								<p>Didn't receive the email? <a href="/forgot-password">Try again</a></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock content %}