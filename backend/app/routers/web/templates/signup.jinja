{% extends './base.jinja' %}

{% block content %}
	<section id="signupPage" class="py-3 py-md-5 py-xl-8">
		<div class="container">
			<div class="row gy-4 align-items-center">
				<div class="col-12 col-md-6 col-xl-7">
					<div class="d-flex justify-content-center">
						<div class="col-12 col-xl-9">
							<hr class="border-primary-subtle mb-4"/>
							<h2 class="h1 mb-4">ARSALAN</h2>
							<h2 class="h1 mb-4" style="color: #018fae">AL HASHIMI</h2>
							<p class="lead mb-5">A seasoned humanist, researcher, serial entrepreneur, advisor, husband and father,
								deeply immersed in the realms of high performance and human optimization.</p>
						</div>
					</div>
				</div>
				<div class="col-12 col-md-6 col-xl-5">
					<div class="card border-0 rounded-4">
						<div class="card-body p-3 p-md-4 p-xl-5">
							<div class="row">
								<div class="col-12">
									<div class="mb-4">
										<h3 style="color: #000">Sign Up</h3>
										<p>Already have an account? <a href="/login">Sign in</a></p>
									</div>
								</div>
							</div>
							<form action="#!">
								<div class="row gy-3 overflow-hidden">
									<div class="col-12">
										<div class="form-floating mb-3">
											<input type="text" class="form-control" name="full_name" id="full_name" placeholder="Full Name"
														 required/>
											<label for="full_name" class="form-label">Full Name</label>
										</div>
									</div>
									<div class="col-12">
										<div class="form-floating mb-3">
											<input type="email" class="form-control" name="email" id="email" placeholder="name@example.com"
														 required/>
											<label for="email" class="form-label">Email</label>
										</div>
									</div>
									<div class="col-12">
										<div class="form-floating mb-3">
											<input type="email" class="form-control" name="phone" id="phone" placeholder="9999999999"
														 required/>
											<label for="email" class="form-label">Phone Number</label>
										</div>
									</div>
									<div class="col-12">
										<div class="form-floating mb-3">
											<input type="password" class="form-control" name="password" id="password" placeholder="Password"
														 required/>
											<label for="password" class="form-label">Password</label>
										</div>
									</div>
									<div class="col-12">
										<div class="form-check">
											<input class="form-check-input" type="checkbox" required name="terms" id="terms"/>
											<label class="form-check-label text-secondary" for="terms">
												I agree to the
												<a href="https://theascension.co" target="_blank">Terms and Conditions</a>
												and
												<a href="https://theascension.co" target="_blank">Privacy Policy</a>.
											</label>
										</div>
									</div>
									<div class="col-12">
										<div class="d-grid">
											<button class="btn btn-primary btn-lg" type="submit">Sign Up</button>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock content %}